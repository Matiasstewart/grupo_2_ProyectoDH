  <body>
    <%- include('partials/header.ejs') %> 
    <main>
        <section>
            <h2 class="texto-del-carrito">Carrito</h2>
        </section>
        <article class="producto-del-carrito">
            <div class="imagen-del-carrito">
             <img src="/images/prod 3.jpg" alt="foto del producto">
