                        <option value="talle4">XL</option>
                        <option value="talle5">XXL</option>
                    </select>
                </div>
                <div>
                    <label>Color:</label>
                    <select name="color" class="color">
                        <option value="color1">Negro</option>
                        <option value="color2">Blanco</option>
                        <option value="talle3">Marron</option>
                        <option value="talle4">Azul</option>
                    </select>
                </div>
                </form>
                <div class="precio-y-cantidad">
                   <p>Precio</p>
                    <form class="cantidad-del-producto" method="POST">
                        <label>Cantidad</label>
                        <select name="cantidad" class="cantidad">
                            <option value="1">1</option>
                            <option value="1">2</option>
                            <option value="1">3</option>
                            <option value="1">4</option>
                        </select>
                    </form>
                   <p>Subtotal</p>
                </div>
                <div class="tacho-de-basura">
                <i class="fas fa-trash"></i>
             </div>
        </article>
        <article class="producto-del-carrito">
            <div class="imagen-del-carrito">
             <img src="/images/prod 4.jpg" alt="foto del producto">
            </div>
            <form class="talle-y-color" method="POST">
                <div>
                    <label>Talle:</label>
                    <select name="talle" class="talle">
                        <option value="talle1">S</option>
                        <option value="talle2">M</option>
                        <option value="talle3">L</option>
                        <option value="talle4">XL</option>
                        <option value="talle5">XXL</option>
                    </select>
                </div>
                <div>
                    <label>Color:</label>
                    <select name="color" class="color">
                        <option value="color1">Negro</option>
                        <option value="color2">Blanco</option>
                        <option value="talle3">Marron</option>
                        <option value="talle4">Azul</option>
                    </select>
                </div>
                </form>
                <div class="precio-y-cantidad">
                   <p>Precio</p>
                    <form class="cantidad-del-producto" method="POST">
                        <label>Cantidad</label>
                        <select name="cantidad" class="cantidad">
                            <option value="1">1</option>
                            <option value="1">2</option>
                            <option value="1">3</option>
                            <option value="1">4</option>
                        </select>
                    </form>
                   <p>Subtotal</p>
                </div>
                <div class="tacho-de-basura">
                <i class="fas fa-trash"></i>
             </div>
        </article>
       </section>
       <section class ="resumen-y-codigo">
        <article class="resumen-del-carrito">
            <div><h2>Resumen</h2></div>
            <div><p>Subtotal $</p>
                 <p>Total $</p>
