<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs',{titulo:'Registro', css:'register'})%>
  <body>
    <%- include('../partials/header.ejs') %> 
      <main>
          <form action="" method="POST" class="register">
              <section>
                  <div class="text-register">
                    <h1>Crear nueva cuenta de cliente</h1>
                  </div>
                  <div class="text-register">
                    <h3>Informacion personal</h3>
                  </div>
                  </section>
                  <section>
                  <div class="form-register">
                      <label class="title-label">Nombre</label>
                      <input type="text" class="text-register-form" minlength="3" placeholder="Aca va tu nombre" required>
                  </div>
                  <div  class="form-register">
                      <label class="title-label">Apellido</label>
                      <input type="text" class="text-register-form" minlength="3" placeholder="Aca va tu apellido" required>
                  </div>
                  <div  class="form-register">
                      <label for="fecha-de-nacimiento" class="title-label">Fecha de nacimiento</label>
                      <input type="date" class="text-register-form" name="fecha-de-nacimiento" required>
                  </div>
                  <div  class="form-register">
                      <label class="title-label">DNI</label>
                      <input type="text" class="text-register-form" maxlength="8" placeholder="Aca va tu DNI" required>
                  </div>
                </section>
                <section>
                  <div  class="form-register">
                      <label class="title-label">Email</label>
                      <input type="email" class="text-register-form" name="email" placeholder="Aca va tu E-mail" required>
                  </div>
                  <div class="form-register">
                      <label for="contraseña" class="title-label">Contraseña</label>
                      <input type="password" class="text-register-form" name="contraseña" placeholder="Aca va tu contraseña" required>
                  </div>
                  <div class="form-register">
                      <label for="confirmar-contraseña" class="title-label">Confirmar Contraseña</label>
                      <input type="password" class="text-register-form" name="confirmar-contraseña" placeholder="Aca va tu contraseña" required>
                  </div>
                </section>
                  <p class="p-register">Campos requeridos</p>
                  <button type="submit" class="button-register"><a href="/">Crear Cuenta</a></button>
              </section>
          </form>
      </main>
      <%- include('../partials/footer.ejs') %> 
</body>
</html>